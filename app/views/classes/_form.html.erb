<%= simple_form_for(classe) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :experience, collection: Classe.experience.options, include_blank: "Select experience" %>
  <%= f.input :certified, as: :select, collection: [['No', false],['Yes', true]], include_blank: false %>
  <%= f.button :submit, 'Submit', class: "btn-primary" %>
<% end %>
