<%= simple_form_for(classe) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :tag_names, label: "Tags" %>
  <%= f.input :experience, collection: Classe.experience.options, include_blank: "Select experience" %>
  <%= f.input :certified, as: :select, collection: [['No', false],['Yes', true]], include_blank: false %>

  <div>
    <p><strong>Addresses:</strong></p>

    <div id="addresses">
      <%= f.simple_fields_for :locations do |location| %>
        <%= render 'location_fields', f: location %>
      <% end %>

      <%=  link_to_add_association 'Add address', f, :locations %>
    </div>
  </div>

  <%= f.button :submit, 'Submit', class: "btn-primary" %>
<% end %>
